@model WebApp.Models.Edit.IssueEditViewModel

@{
    ViewBag.Title = "Create";

    Model.Issue.DateFiled = DateTime.Now;
    Model.Issue.OwnerEmail = ViewBag.CurrentPerson.Email;
    Model.Issue.OwnerId = ViewBag.CurrentPerson.Id;
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
   @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Issue</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(y => y.Issue.OwnerEmail)
        @Html.HiddenFor(y => y.Issue.OwnerId)
        
       
        
        <div class="form-group">
            @Html.LabelFor(y => y.Issue.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(y => y.Issue.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(y => y.Issue.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(y => y.Issue.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(y => y.Issue.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(y => y.Issue.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(y => y.Issue.Type, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(y => y.Issue.Type, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(y => y.Issue.Type, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(y => y.Issue.ProjectName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(y => y.Issue.ProjectName, (IEnumerable<SelectListItem>)ViewBag.ListOfProjects)
                @Html.ValidationMessageFor(y => y.Issue.ProjectName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Issue List", "Issues")
</div>
